<main class="contenedor">
  <form action="/vacantes/nueva" method="POST" class="default-form">
    <h3>Informacion General</h3>
    <div class="campo">
      <label for="">Titulo</label>
      <input
        type="text"
        name="titulo"
        placeholder="Ej: React Developer"
        required
      />
    </div>
    <div class="campo">
      <label for="">Empresa</label>
      <input
        type="text"
        name="empresa"
        placeholder=" Empresa Contrata"
        required
      />
    </div>
    <div class="campo">
      <label for="">Ubicacion</label>
      <input type="text" name="ubicacion" placeholder="Ej: Peru" required />
    </div>
    <div class="campo">
      <label for="">Salario (USD)</label>
      <input type="text" name="salario" placeholder="Ej: 500 USD" required />
    </div>
    <div class="campo">
      <label>Contrato</label>
      <select name="contrato">
        <option value="" disabled select>-- Selecciona --</option>
        <option value="Freelance">Freelance</option>
        <option value="Tiempo Completo">Tiempo Completo</option>
        <option value="Medio tiempo">Medio tiempo</option>
        <option value="Por proyecto">Por Proyecto</option>
      </select>
    </div>
    <h3>Descripcion del puesto</h3>
    <div class="campo descripcion">
      <label for="">Descripcion</label>
      <input type="hidden" id="x" name="descripcion" />
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
      {{#seleccionarSkills a}}{{/seleccionarSkills}}
    </ul>

    <div class="campo centrar-horizontal">
      <input type="hidden" name="skills" id="skills" />
      <input type="submit" class="btn btn-azul" value="Publicar" />
    </div>
  </form>
</main>