<main class="lista-vacante">
  <h2>Lista de Vacantes</h2>

  {{#if vacantes.length}}
    {{#each vacantes as |vacante|}}
      <div class="vacante">
        <div class="caja">
          <h3>{{vacante.titulo}}</h3>
          <p class="puesto">{{vacante.puesto}}</p>
        </div>
        <div class="caja">
          <p class="etiqueta">Ubicacion</p>
          <p class="nombre">{{vacante.ubicacion}}</p>
        </div>
        <div class="caja">
          <p class="etiqueta">Contrato</p>
          <p class="nombre contrato">{{vacante.contrato}}</p>
        </div>
        <div class="caja centrar-vertical">
          <a href="/vacantes/{{vacante.url}}" class="btn btn-verde">Mas Info</a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>No hay vacantes</p>
  {{/if}}
</main>